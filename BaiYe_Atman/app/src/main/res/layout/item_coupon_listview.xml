<?xml version="1.0" encoding="utf-8"?>
<com.atman.jishang.widget.SlidingButtonView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:background="#DCE0E3">

    <RelativeLayout
        android:id="@+id/item_fullcut_root_rl"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_toRightOf="@+id/layout_content"
            android:layout_width="160dp"
            android:layout_height="115dp"
            android:orientation="horizontal">

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="7dp"
                android:id="@+id/tv_edit"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#C7C7CC"
                android:gravity="center"
                android:textSize="15sp"
                android:text="编 辑"
                android:textColor="#DDFFFFFF" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="7dp"
                android:id="@+id/tv_delete"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#ff0000"
                android:textSize="15sp"
                android:gravity="center"
                android:text="删 除"
                android:textColor="#DDFFFFFF" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:background="#DCE0E3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/item_coupon_bg"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.7"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="7dp"
                            android:paddingTop="5dp"
                            android:text="¥"
                            android:textColor="@color/color_white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/item_coupon_denomination_tx"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="300000000"
                            android:textColor="@color/color_white"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="6dp"
                        android:text="优惠券"
                        android:textColor="@color/color_white"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/item_coupon_achieve_tx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="满1000可用"
                            android:textColor="@color/color_white"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/item_coupon_share_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:src="@mipmap/fullcut_share" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/item_coupon_surplus_tx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:singleLine="true"
                        android:text="剩余200张"
                        android:textColor="@color/color_white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/item_coupon_time_tx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="2016.03.03 00:00-2016.04.04 00:00"
                        android:textColor="@color/color_white"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/item_coupon_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                android:background="#44000000"/>
        </RelativeLayout>


    </RelativeLayout>
</com.atman.jishang.widget.SlidingButtonView>
