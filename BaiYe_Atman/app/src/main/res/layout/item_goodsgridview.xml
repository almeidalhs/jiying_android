<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_goodspreview_ll"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@color/color_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_goodspreview_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/item_goodspreview_name_tx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/color_black"
        android:textSize="14sp"
        android:text="商品名称"
        android:singleLine="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_goodspreview_price_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#DE6C5F"
            android:text="¥ 356"
            android:textSize="14sp"
            android:singleLine="true"/>

        <ImageView
            android:visibility="invisible"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@mipmap/item_collection"/>
        <TextView
            android:id="@+id/item_goodspreview_collection_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:visibility="invisible"
            android:text="  9"
            android:textSize="14sp"
            android:singleLine="true"/>
    </LinearLayout>


</LinearLayout>