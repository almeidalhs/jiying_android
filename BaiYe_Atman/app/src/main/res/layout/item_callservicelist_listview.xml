<?xml version="1.0" encoding="utf-8"?>
<com.atman.jishang.widget.SlidingButtonView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/dimen_dp_5"
    android:layout_height="85dp">

    <RelativeLayout
        android:id="@+id/item_fullcut_root_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/layout_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_code"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="#00bbaa"
                android:gravity="center"
                android:text="制码"
                android:textColor="#DDFFFFFF"
                android:textSize="@dimen/dimen_sp_13" />

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@color/color_16c5ee"
                android:gravity="center"
                android:text="编辑"
                android:textColor="#DDFFFFFF"
                android:textSize="@dimen/dimen_sp_13" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="#ff0000"
                android:gravity="center"
                android:text="删除"
                android:textColor="#DDFFFFFF"
                android:textSize="@dimen/dimen_sp_13" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_40"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_dp_15"
                android:paddingRight="@dimen/dimen_dp_15">

                <TextView
                    android:id="@+id/item_callservicelist_name_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务名称:"
                    android:textColor="@color/color_242424"
                    android:textSize="@dimen/dimen_sp_14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_dp_15">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_line" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_40"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_dp_15"
                android:paddingRight="@dimen/dimen_dp_15">

                <TextView
                    android:id="@+id/item_callservicelist_password_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务备注:"
                    android:textColor="@color/color_242424"
                    android:textSize="@dimen/dimen_sp_14" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</com.atman.jishang.widget.SlidingButtonView>
