<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_dp_10"
        android:paddingLeft="@dimen/dimen_dp_15"
        android:paddingTop="@dimen/dimen_dp_10"
        android:text="新增服务"
        android:textColor="@color/color_242424"
        android:textSize="@dimen/dimen_sp_12" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_40"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_dp_15"
        android:paddingRight="@dimen/dimen_dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新增服务:"
            android:textColor="@color/color_242424"
            android:textSize="@dimen/dimen_sp_14" />

        <EditText
            android:id="@+id/callservice_name_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="输入服务名称"
            android:maxLength="6"
            android:paddingLeft="@dimen/login_edittext_padding"
            android:paddingRight="@dimen/login_edittext_right_padding"
            android:singleLine="true"
            android:textColor="@color/color_black"
            android:textCursorDrawable="@color/color_16c5ee"
            android:textSize="@dimen/dimen_sp_13" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_dp_15">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_40"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_dp_15"
        android:paddingRight="@dimen/dimen_dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务备注:"
            android:textColor="@color/color_242424"
            android:textSize="@dimen/dimen_sp_14" />

        <EditText
            android:id="@+id/callservice_remark_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="输入服务备注,尽自己可见"
            android:maxLength="50"
            android:paddingLeft="@dimen/login_edittext_padding"
            android:paddingRight="@dimen/login_edittext_right_padding"
            android:singleLine="true"
            android:textColor="@color/color_black"
            android:textCursorDrawable="@color/color_16c5ee"
            android:textSize="@dimen/dimen_sp_13" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_40"
        android:layout_marginTop="@dimen/dimen_dp_20"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_dp_15"
        android:paddingRight="@dimen/dimen_dp_15">

        <Button
            android:id="@+id/callservice_save_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_full_selector"
            android:text="保       存"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dimen_sp_15" />
    </LinearLayout>

    <TextView
        android:id="@+id/callservice_empty_tx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_dp_15"
        android:paddingRight="@dimen/dimen_dp_15"
        android:layout_marginTop="@dimen/dimen_dp_40"
        android:textSize="@dimen/dimen_sp_15"
        android:text="备注:\n设置除菜品外可提供的服务类型和名称,优化顾客体验"/>

    <LinearLayout
        android:id="@+id/callservice_notempty_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_dp_30"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_dp_5"
            android:paddingTop="@dimen/dimen_dp_10"
            android:paddingLeft="@dimen/dimen_dp_15"
            android:text="已有服务"
            android:textColor="@color/color_242424"
            android:textSize="@dimen/dimen_sp_12" />

        <com.handmark.pulltorefresh.library.extras.recyclerview.PullToRefreshRecyclerView
            xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/pull_refresh_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ptr:ptrMode="both" />
    </LinearLayout>


</LinearLayout>