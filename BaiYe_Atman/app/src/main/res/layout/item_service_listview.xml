<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_service_root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dimen_dp_15"
    android:background="@drawable/white_hollow_selector"
    android:clickable="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_60"
        android:paddingRight="@dimen/dimen_dp_15"
        android:paddingTop="@dimen/dimen_dp_5"
        android:paddingBottom="@dimen/dimen_dp_5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_service_iv"
            android:layout_width="@dimen/dimen_dp_50"
            android:layout_height="@dimen/dimen_dp_50"
            android:src="@mipmap/about_ic"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_dp_10"
            android:layout_marginRight="@dimen/dimen_dp_10"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_service_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="wifi"
                android:textColor="@color/color_242424"
                android:textSize="@dimen/dimen_sp_15"/>

            <TextView
                android:id="@+id/item_service_description_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="wifi"
                android:textColor="@color/color_767678"
                android:textSize="@dimen/dimen_sp_12"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.corelib.widget.switchbutton.SwitchButton
                android:id="@+id/setting_open_sb"
                style="@style/SwitchButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:kswTintColor="#3FD86E"
                app:kswFadeBack="false"/>

            <TextView
                android:id="@+id/item_service_setting_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="已设置"
                android:textColor="@color/color_767678"
                android:textSize="@dimen/dimen_sp_10"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/item_service_line_iv"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_line"/>
</LinearLayout>