<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EDEDED"
        android:paddingBottom="@dimen/dimen_dp_10"
        android:paddingLeft="@dimen/dimen_dp_15"
        android:paddingRight="@dimen/dimen_dp_15"
        android:paddingTop="@dimen/dimen_dp_10">

        <com.corelib.widget.MyCleanEditText
            android:id="@+id/memberlist_search_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_edittext_bg_selector"
            android:hint="@string/memberlist_search_hint"
            android:singleLine="true"
            android:padding="5dp"
            android:textColor="@color/color_black"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/memberlist_condition_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_EDEDED"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/memberlist_condition_tx"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/color_black" />

            <ImageView
                android:id="@+id/memberlist_condition_delete_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/item_addfull_delete" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/memberlist_allselect_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/member_unselect_all" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="全选"
            android:textColor="#434343" />

        <TextView
            android:id="@+id/memberlist_total_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共--位会员"
            android:textColor="#434343" />

        <TextView
            android:id="@+id/memberlist_add_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/member_red_selector"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="新增会员"
            android:textColor="@color/color_white"
            android:textSize="10sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_line" />

    <com.handmark.pulltorefresh.library.PullToRefreshListView xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pullToRefreshListView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@color/color_white"
        android:divider="@color/color_line"
        android:dividerHeight="0dp"
        android:scrollbars="none"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrMode="disabled"
        ptr:ptrScrollingWhileRefreshingEnabled="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_line" />

    <LinearLayout
        android:id="@+id/memberlist_message_root"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_white"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/memberlist_message_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_hollow_selector"
            android:clickable="true"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dimen_dp_30"
                android:layout_height="@dimen/dimen_dp_30"
                android:src="@mipmap/member_bottom_ic"/>

            <TextView
                android:layout_marginLeft="@dimen/dimen_dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="发消息"
                android:textColor="@color/color_16c5ee"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>