<?xml version="1.0" encoding="utf-8"?>
<com.atman.jishang.widget.SlidingButtonView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="115dp">

    <RelativeLayout
        android:id="@+id/item_fullcut_root_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="115dp"
            android:layout_toRightOf="@+id/layout_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="5dp"
                android:background="#C7C7CC"
                android:gravity="center"
                android:text="编 辑"
                android:textColor="#DDFFFFFF"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="5dp"
                android:background="#ff0000"
                android:gravity="center"
                android:text="删 除"
                android:textColor="#DDFFFFFF"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/color_white"
                android:gravity="center">

                <ImageView
                    android:id="@+id/item_ordermanage_select_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/selected"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_content_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/goods_list_manage_unselected"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_hollow_selector"
                    android:gravity="center_vertical"
                    android:minHeight="35dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/default_padding"
                    android:paddingRight="@dimen/default_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ordermanage_id"
                        android:textColor="#343434"
                        android:textSize="@dimen/personal_item_size" />

                    <TextView
                        android:id="@+id/item_ordermanage_id_tx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/default_padding"
                        android:textColor="#343434"
                        android:textSize="@dimen/personal_item_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="@dimen/default_padding"
                        android:background="@color/color_line" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_hollow_selector"
                    android:gravity="center_vertical"
                    android:minHeight="35dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/default_padding"
                    android:paddingRight="@dimen/default_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ordermanage_goodsinfo"
                        android:textColor="#555555"
                        android:textSize="@dimen/personal_item_size" />

                    <TextView
                        android:id="@+id/item_ordermanage_goodsinfo_tx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/default_padding"
                        android:textColor="#555555"
                        android:textSize="@dimen/personal_item_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="@dimen/default_padding"
                        android:background="@color/color_line" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_hollow_selector"
                    android:gravity="center_vertical"
                    android:minHeight="40dp"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingLeft="@dimen/default_padding"
                    android:paddingRight="@dimen/default_padding"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/item_ordermanage_time_tx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2016-06-21 11:11"
                        android:textColor="#555555" />

                    <TextView
                        android:id="@+id/item_ordermanage_money_tx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="¥ 2016"
                        android:textColor="#555555" />

                    <Button
                        android:id="@+id/item_ordermanage_pay_bt"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/red_full_selector"
                        android:text="支 付"
                        android:textColor="@color/color_white"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
</com.atman.jishang.widget.SlidingButtonView>
