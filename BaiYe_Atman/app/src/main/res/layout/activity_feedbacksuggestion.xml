        android:padding="5dp"
        android:gravity="left|top"
        android:background="@drawable/gray_red_edittext_bg_selector"
        android:hint="@string/feedback_sugg_hint"
        android:layout_margin="@dimen/default_padding"/>

</LinearLayout>