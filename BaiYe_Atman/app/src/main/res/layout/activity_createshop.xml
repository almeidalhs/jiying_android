<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/personal_main_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:id="@+id/shop_head_rl"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:clickable="true">

        <ImageView
            android:id="@+id/shop_top_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/personal_top_bg"/>

        <TextView
            android:id="@+id/shop_top_tx"
            android:layout_marginTop="5dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:textSize="15sp"
            android:text="@string/shop_top_tx"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/shop_name_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/personal_item_hight"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/color_white"
        android:paddingLeft="@dimen/default_padding"
        android:paddingRight="@dimen/default_padding">
        <ImageView
            android:layout_width="@dimen/personal_item_ic"
            android:layout_height="@dimen/personal_item_ic"
            android:src="@mipmap/shop_name_ic"/>
        <RelativeLayout
            android:layout_marginRight="5dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/default_padding"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/shop_name"
                android:textSize="@dimen/personal_item_size"
                android:textColor="@color/personal_item_tx"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/red_circle"/>
        </RelativeLayout>

        <EditText
            android:background="@null"
            android:id="@+id/shop_name_tx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:singleLine="true"
            android:gravity="right|center_vertical"
            android:layout_marginRight="@dimen/default_padding"
            android:hint="@string/shop_name"
            android:textSize="@dimen/personal_item_edit_size"
            android:textColor="@color/personal_item_hint_tx"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/default_padding"
            android:background="@color/color_line"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/shop_phone_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/personal_item_hight"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/color_white"
        android:paddingLeft="@dimen/default_padding"
        android:paddingRight="@dimen/default_padding">
        <ImageView
            android:layout_width="@dimen/personal_item_ic"
            android:layout_height="@dimen/personal_item_ic"
            android:src="@mipmap/shopinfo_phone_ic"/>

        <RelativeLayout
            android:layout_marginRight="5dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/default_padding"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/shop_phone"
                android:textSize="@dimen/personal_item_size"
                android:textColor="@color/personal_item_tx"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/red_circle"/>
        </RelativeLayout>
        <EditText
            android:background="@null"
            android:id="@+id/shop_phone_tx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:singleLine="true"
            android:layout_marginRight="@dimen/default_padding"
            android:gravity="right|center_vertical"
            android:hint="@string/shop_phone"
            android:textSize="@dimen/personal_item_edit_size"
            android:textColor="@color/personal_item_hint_tx"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/default_padding"
            android:background="@color/color_line"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/shop_address_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/personal_item_hight"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/color_white"
        android:paddingLeft="@dimen/default_padding"
        android:paddingRight="@dimen/default_padding">
        <ImageView
            android:layout_width="@dimen/personal_item_ic"
            android:layout_height="@dimen/personal_item_ic"
            android:src="@mipmap/shopinfo_addr_ic"/>
        <RelativeLayout
            android:layout_marginRight="5dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/default_padding"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/shop_address"
                android:textSize="@dimen/personal_item_size"
                android:textColor="@color/personal_item_tx"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/red_circle"/>
        </RelativeLayout>

        <EditText
            android:background="@null"
            android:id="@+id/shop_address_tx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:singleLine="true"
            android:layout_marginRight="@dimen/default_padding"
            android:gravity="right|center_vertical"
            android:hint="@string/shop_address"
            android:textSize="@dimen/personal_item_edit_size"
            android:textColor="@color/personal_item_hint_tx"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/default_padding"
            android:background="@color/color_line"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/shop_type_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/personal_item_hight"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:clickable="true"
        android:background="@drawable/white_hollow_selector"
        android:paddingLeft="@dimen/default_padding"
        android:paddingRight="10dp">
        <ImageView
            android:layout_width="@dimen/personal_item_ic"
            android:layout_height="@dimen/personal_item_ic"
            android:src="@mipmap/shopinfo_type_ic"/>

        <RelativeLayout
            android:layout_marginRight="5dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/default_padding"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/shop_type"
                android:textSize="@dimen/personal_item_size"
                android:textColor="@color/personal_item_tx"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/red_circle"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/shop_type_tx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:gravity="right|center_vertical"
            android:textSize="@dimen/personal_item_edit_size"
            android:textColor="@color/personal_item_hint_tx"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:src="@mipmap/right_arrow"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/default_padding"
            android:background="@color/color_line"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/personal_description_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/personal_item_hight"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/color_white"
        android:paddingLeft="@dimen/default_padding"
        android:paddingRight="@dimen/default_padding">
        <ImageView
            android:layout_width="@dimen/personal_item_ic"
            android:layout_height="@dimen/personal_item_ic"
            android:src="@mipmap/shopinfo_describe_ic"/>

        <RelativeLayout
            android:layout_marginRight="5dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/default_padding"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/shop_description"
                android:textSize="@dimen/personal_item_size"
                android:textColor="@color/personal_item_tx"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/red_circle"/>
        </RelativeLayout>
        <EditText
            android:background="@null"
            android:id="@+id/shop_description_tx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:singleLine="true"
            android:layout_marginRight="@dimen/default_padding"
            android:gravity="right|center_vertical"
            android:hint="@string/shop_description"
            android:textSize="@dimen/personal_item_edit_size"
            android:textColor="@color/personal_item_hint_tx"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line"/>

    <Button
        android:id="@+id/shop_commit_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/register_padding"
        android:layout_marginLeft="@dimen/register_padding"
        android:textSize="@dimen/login_button_text"
        android:background="@drawable/red_full_selector"
        android:textColor="@color/color_white"
        android:text="@string/shop_commit_tx"/>
</LinearLayout>