<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/fullcut_add_next_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/personal_item_hight"
        android:background="@drawable/white_hollow_selector"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/goods_management_add" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="@string/fullcut_add_add"
            android:textColor="#EC5D44"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>